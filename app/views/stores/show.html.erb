<div class="container">
<h2>Store Mdr</h2>


<table class="table table-bordered">
  <tr class="header">
    <th scope="col" class="col">Payment Mode</th>
    <th scope="col" class="col">Rate Amount</th>
    <th scope="col" class="col">Rate Type</th>
    <th scope="col"class="col">UpTo Amount</th>
    <th scope="col" class="col">From Amount</th>  
    <th scope="col" class="col">Action</th>  
  </tr>
  <% @store_mdrs.each do |store_mdr| %>
      <tr>
        
        <td scope="row"><%=store_mdr.payment_mode%></td>
        <td scope="row"><%=store_mdr.rate_amount%></td>
        <td scope="row"><%=store_mdr.rate_type%></td>
        <td scope="row"><%=store_mdr.upto_amount%></td>
        <td scope="row"><%=store_mdr.from_amount%></td>
        <td scope="row"><%= link_to "Edit", edit_store_store_mdr_path(@store.id,store_mdr.id)%></td>
        
        
      </tr>
  <%end%>
</table>
</div>
