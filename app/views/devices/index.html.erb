<h2>Configure Store Devices</h2>

<h3>New Device</h3>
<%=form_for(@device,:url=>devices_path,:method => 'post') do |f|%>
    <%= f.text_field :serial_no , placeholder: "Device Serial No" %>
    <%= f.text_field :remarks, placeholder: "Remarks"%>
    <%= f.select :status, ["Active ", "Inactive"]  %>
    <%= f.submit %>
<% end %>
</div>


<div>
<h3>Store Devces</h3>
<div>
<table>
 <tr>
     <th>Device No</th>
     <th>Device Serial NO</th>
     <th>Remakrs</th>
     <th>Status</th>
 </tr>
 <%= @devices.each do |device| %>
 <tr>
 <td ><%=device.id%></td>
 <td><%=device.serial_no%></td>
 <td><%=device.remarks%></td>
 <td><%=device.status%></td>
 
 

 </tr>
 <%end%>
 </table>
</div>

</div>